{
  "manifest_version": 2,

  "name": "ForX",
  "description": "Pay what you should",
  "version": "0.1.3",
  "background": {
    "scripts": ["jquery-2.1.4.min.js", "background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/gp/*",
        "https://*.amazon.com/gp/buy/*/handlers/*",
        "https://www.google.com/*"
      ],
      "exclude_matches": [
        "https://*.amazon.com/gp/cart/view.html*"
      ],
      "js": ["jquery-2.1.4.min.js", "content_scripts.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "http://*.multidom.net/"
  ]
}
